<div class="container">
  <h1>Select an account</h1>
  <table class="table table-hover">
    <thead>
      <th>Account ID</th>
      <th>Name</th>
      <th>Business</th>
      <th>Amount Spent</th>
      <th>Age</th>
      <th></th>
    </thead>
    <tbody>
    <% @ad_accounts.each do |act| %>
      <tr data-href="<%= ad_account_path(act.dig('id')) %>">
        <td><%= act.dig("id") %></td>
        <td><%= act.dig("name") %></td>
        <td><%= act.dig("business", "name") %></td>
        <td><%= number_to_currency act.dig("amount_spent") %></td>
        <td><%= act.dig("age") %></td>
        <td><i class="fa fa-arrow-right"></i></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
<% console %>
